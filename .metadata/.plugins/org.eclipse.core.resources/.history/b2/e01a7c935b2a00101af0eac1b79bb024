package FlipkartPages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.*;
import FlipkartPages.ProductBox;

public class FlipKartTest {
    private WebDriver driver;
    private ProductBox productBox;
    private SearchBox searchBox;
    private AddToCart addTocart;

    @BeforeSuite
    public void setUp() {
       // System.setProperty("webdriver.chrome.driver", "path/to/chromedriver");
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        driver.get("https://www.flipkart.com");
        
        productBox = new ProductBox(driver); 
        searchBox=new SearchBox(driver);
        addTocart=new AddToCart(driver);
    }
    @Test(priority =1)
    public void testSearch() {
    	searchBox.searchProduct("Iphone 14");
    }
    @Test(priority=2)
    public void testProductSelection() {
        productBox.selectProduct();
        System.out.println("Product selection executed successfully.");
    }
    @Test (priority=3)
    public void testAddToCart() {
    	addTocart.addItemToCart();
    	
    }
    @Test(priority=4,dependsOnMethods= {"testAddToCart"})
    public void testRemove() {
    	addTocart.removeItemFromCart();
    	System.out.println("Item removed from cart");
    }
    @AfterSuite
    public void tearDown() {
        driver.quit();
    }
}
