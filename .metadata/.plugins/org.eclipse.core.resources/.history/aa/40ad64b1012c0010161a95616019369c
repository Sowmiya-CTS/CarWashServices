package practice;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.testng.annotations.*;

public class LoginTest {

    private static ThreadLocal<WebDriver> driver = new ThreadLocal<>();

    @BeforeSuite
    public void setUp() {
        
        Thread chromeThread = new Thread(() -> driver.set(new ChromeDriver()));
        Thread firefoxThread = new Thread(() -> driver.set(new FirefoxDriver()));

        chromeThread.start();
        firefoxThread.start();

        try {
            chromeThread.join();
            firefoxThread.join();
        } catch (InterruptedException e) {
            e.printStackTrace();
        }

        System.out.println("Parallel browsers success");
    }

    @BeforeClass
    public void login() {
        Login.login();  
        System.out.println("Login successful");
    }

    @Test
    public void actions() {
        System.out.println("Executing test");
    }

    @AfterSuite
    public void close() {
        if (getDriver() != null) {
            getDriver().quit();
        }
    }

    public WebDriver getDriver() {
        return driver.get();
    }
}
